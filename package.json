    "styled-jsx": "5.0.2",
    "tailwindcss": "3.1.2",
    "typed-query-selector": "2.6.1",
    "typescript": "4.7.3",
    "webpack": "5.73.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.18.2",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@cypress/code-coverage": "3.10.0",
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@next/bundle-analyzer": "12.1.6",
    "@next/eslint-plugin-next": "12.1.6",
    "@size-limit/preset-app": "7.0.8",
    "@size-limit/webpack": "7.0.8",
    "@size-limit/webpack-why": "7.0.8",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/forms": "0.5.2",
    "@tailwindcss/line-clamp": "0.4.0",
    "@tailwindcss/typography": "0.5.2",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@textlint/ast-node-types": "12.1.1",
    "@textlint/types": "12.1.1",
    "@types/babel__core": "7.1.19",
    "@types/babel__preset-env": "7.9.2",
    "@types/core-js": "2.5.5",
    "@types/eslint": "8.4.3",
    "@types/is-ci": "3.0.0",
    "@types/jest": "28.1.1",
    "@types/prettier": "2.6.3",
    "@types/sass": "1.43.1",
    "@types/source-map-support": "0.5.4",
    "@types/standard-version": "7.0.1",
    "@types/stylelint": "13.13.3",
    "@types/testing-library__jest-dom": "5.14.3",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "babel-loader": "8.2.5",
    "c8": "7.11.3",
    "commitizen": "4.2.4",
    "cypress": "9.7.0",
    "cypress-watch-and-reload": "1.7.8",
    "dependency-version-badge": "1.11.0",
