      "electron-to-chromium": "1.4.237",
      "source-map-resolve": "latest"
    }
  },
  "next-unused": {
    "alias": {
      "lib/*": [
        "lib/*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "config": [
        "config/"
      ],
      "components/*": [
        "components/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "styles/*": [
        "styles/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "debug": true,
    "include": [
      "src"
    ],
    "exclude": [],
    "entrypoints": [
      "src"
    ]
  }
