    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-declaration-strict-value": "1.8.0",
    "stylelint-formatter-pretty": "3.1.0",
    "tap-spot": "1.1.2",
    "textlint": "12.1.1",
    "textlint-plugin-jsx": "1.1.2",
    "textlint-rule-diacritics": "1.0.0",
    "textlint-rule-terminology": "2.1.6",
    "ts-node": "10.8.1",
    "typedoc": "0.22.17",
    "typescript-eslint-language-service": "5.0.0",
    "typesync": "0.9.1"
  },
  "optionalDependencies": {
    "@axe-core/react": "latest",
    "fsevents": "2.3.2",
    "pnpm": "latest"
  },
  "engines": {
    "pnpm": ">=6"
  },
  "pnpm": {
    "overrides": {
      "browserslist": "latest",
      "caniuse-lite": "latest",
      "chokidar": "3",
      "debug": "latest",
      "source-map-resolve": "latest",
      "minimist": ">=1.2.6",
      "async@<2.6.4": ">=2.6.4",
      "ejs": ">=3.1.7"
    }
  },
  "next-unused": {
    "alias": {
      "lib/*": [
        "lib/*"
      ],
      "assets/*": [
        "assets/*"
      ],
      "config": [
        "config/"
      ],
      "components/*": [
        "components/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "styles/*": [
        "styles/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "debug": true,
    "include": [
      "src"
    ],
    "exclude": [],
    "entrypoints": [
      "src"
    ]
  }
}
