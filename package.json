{
  "name": "overnext",
  "version": "1.1.0",
  "description": "Very opinionated next.js typescript boilerplate",
  "keywords": [
    "next.js, cypress",
    "i18n",
    "typescript"
  ],
  "homepage": "https://overnext.vercel.app",
  "bugs": "https://github.com/einSelbst/overnext/issues",
  "author": "einSelbst",
  "private": true,
  "repository": "https://github.com/einSelbst/overnext",
  "scripts": {
    " ----------------------- Development ----------------------- ": "",
    "?dev": "echo Start next app in dev mode",
    "dev": "next",
    "?debug": "echo Start node debugger",
    "debug": "NODE_OPTIONS='--inspect' next",
    "?build": "echo Build the app",
    "build": "next build",
    "postbuild": "next-sitemap",
    "?start": "echo Start server to serve the local app build",
    "start": "next start",
    "?serve": "echo Build app and start server",
    "serve": "pnpm build && next start",
    "?servex": "echo Build & run app on public URL",
    "servex": "pnpm serve & npx localtunnel --port 3000",
    " ------------------------- Testing ------------------------- ": "",
    "?test": "echo Run unit and integration tests once",
    "test": "jest && pnpm e2e",
    "?test:ci": "echo Run jest tests on CI, will re-add cypress later again",
    "test:ci": "jest",
    "?test:jest": "echo Run jest tests and update screenshots",
    "test:jest": "jest -u",
    "?test:cy": "echo Open cypress test runner (needs a running app server)",
    "test:cy": "cypress open",
    "?e2e:watch": "echo Start dev server, open cypress and watch",
    "e2e:watch": "start-test 'pnpm dev' 3000 'pnpm test:cy'",
    "?e2e": "echo Build & serve app, then run cypress once",
    "e2e": "start-test 'pnpm serve' 3000 'cypress run'",
    "pree2e": "rm -rf .nyc_output coverage .next || true",
    " ------------------------- Linting ------------------------- ": "",
    "?format": "echo Format source code and fix issues",
    "format": "prettier-standard --format --lint",
    "?lint": "echo Lint source code and fix issues",
    "lint": "eslint . --fix",
    "?lint:html": "Run html-validate on generated static output files",
    "lint:html": "html-validate '.next/**/*.html'",
    "?validate": "echo Validate source code and output files",
    "validate": "pnpm validate:src && pnpm validate:out",
    "?validate:src": "echo Format, lint, type-check & unit test the app",
    "validate:src": "pnpm format && pnpm lint && pnpm type-check && jest",
    "?validate:out": "echo Build app, run integration tests & validate generated html",
    "validate:out": "pnpm e2e && pnpm lint:html",
    " ------------------------- Helpers ------------------------- ": "",
    "?build:analyze": "echo Build app and output bundle analyzer diagrams",
    "build:analyze": "ANALYZE=true next build",
    "?build:ssr": "echo used on CI for compressed size` action",
    "build:ssr": "NODE_ENV=production BROWSERSLIST_ENV=ssr next build",
    "?cz": "Make new commit",
    "cz": "git-cz",
    "?docs": "Generate typedoc docs",
    "docs": "typedoc",
    "?find:unused:files": "echo Find unused files",
    "find:unused:files": "next-unused",
    "?info": "echo Display info about the scripts",
    "info": "npm-scripts-info",
    "?release": "Prepare a new release",
    "release": "standard-version",
    "type-check": "tsc --pretty --noEmit",
    " --------------------------- WIP --------------------------- ": "",
    "skip-for-now-preinstall": "npx only-allow pnpm"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@axe-core/react": "4.1.1",
    "@babel/core": "7.13.15",
    "@babel/runtime": "7.13.10",
    "@next/bundle-analyzer": "10.1.3",
    "@testing-library/react": "11.2.6",
    "@types/jest": "26.0.22",
    "@types/node": "13.13.49",
    "@types/prop-types": "15.7.3",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "autoprefixer": "10.2.5",
    "babel-jest": "26.6.3",
    "core-js": "3.10.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "jest-watch-typeahead": "0.6.2",
    "netlify-plugin-cypress": "2.2.0",
    "next": "10.1.3",
    "next-compose-plugins": "2.2.1",
    "next-pwa": "5.2.9",
    "next-seo": "4.23.0",
    "next-sitemap": "1.6.25",
    "next-themes": "0.0.14",
    "postcss": "8.2.10",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "start-server-and-test": "1.12.1",
    "tailwindcss": "2.1.1",
    "tslib": "2.2.0",
    "typedoc": "0.20.35",
    "typescript": "4.2.4",
    "webpack": "5.33.2"
  },
  "devDependencies": {
    "@babel/preset-env": "7.13.15",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@cypress/code-coverage": "3.9.4",
    "@next/eslint-plugin-next": "10.1.3",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "commitizen": "4.2.3",
    "cypress": "7.1.0",
    "cypress-watch-and-reload": "1.3.6",
    "dependency-version-badge": "1.9.1",
    "eslint": "7.24.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-compat": "3.9.0",
    "eslint-plugin-cypress": "2.11.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-jest-dom": "3.8.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-tsdoc": "0.2.11",
    "eslint-plugin-unicorn": "29.0.0",
    "html-validate": "4.9.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "next-unused": "0.0.6",
    "npm-scripts-info": "0.3.9",
    "prettier-standard": "16.3.0",
    "standard-version": "9.2.0"
  },
  "optionalDependencies": {
    "fsevents": "2.3.2",
    "pnpm": "latest"
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "husky"
      ],
      "alowedVersions": "<=4"
    }
  ],
  "engines": {
    "node": ">=14",
    "pnpm": ">=5"
  },
  "pnpm": {
    "overrides": {
      "browserslist": "latest",
      "caniuse-lite": "latest",
      "fsevents": "2.3.2",
      "prettierx": "0.17"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "pnpm type-check"
    }
  },
  "lint-staged": {
    "*": [
      "prettier-standard --lint"
    ]
  },
  "next-unused": {
    "alias": {
      "@lib/*": [
        "lib/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "debug": true,
    "include": [
      "src"
    ],
    "exclude": [],
    "entrypoints": [
      "src"
    ]
  },
  "nyc": {
    "exclude": [
      "src/pages/api/__coverage__.js"
    ]
  },
  "volta": {
    "node": "14.16.1",
    "npm": "7.9.0"
  }
}
