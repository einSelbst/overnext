{
  "root": true,
  "extends": ["html-validate:recommended", "html-validate:document"],
  "rules": {
    "attribute-boolean-style": "off",
    "attr-case": ["error", { "style": ["lowercase", "camelcase"] }],
    "void-style": "off",
    "require-sri": "off"
  },
  "plugins": [],
  "elements": [
    "html5",
    {
      "link": {
        "requiredAttributes": ["rel"]
      }
    }
  ]
}
